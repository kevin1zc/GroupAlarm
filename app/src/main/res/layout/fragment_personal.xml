<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/username_textview"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="60sp"
        android:textStyle="bold"
        android:text="TextView" />


    <TextView
        android:id="@+id/setting_textview"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username_textview"
        android:layout_marginStart="50dp"
        android:text="Settings"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/friends_textview"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/setting_textview"
        android:text="Friends"
        android:layout_marginStart="50dp"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/setting_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username_textview"
        android:src="@drawable/ic_settings" />

    <ImageView
        android:id="@+id/friends_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setting_textview"
        android:src="@drawable/ic_contacts" />

</RelativeLayout>